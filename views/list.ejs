<%- include('partials/header.ejs') %>

<main class="container-fluid ms-3">
    <input class="title" placeholder="List Title" value="My TV List">
    <section class="list container">

        <% if (shows.length === 0) { %>
        <div class="position-absolute top-50 start-50 translate-middle text-center empty-list">
            <img src="/imgs/tree_trunks.svg" alt="Tree Trunks SVG" width="350">
            <p class="empty-list-text">Nothing here...</p>
        </div>
        <% } else { %>
            <table class="table table-bordered align-middle">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Poster</th>
                        <th scope="col">Name</th>
                        <th scope="col">Premiere Date</th>
                        <th scope="col">Rating</th>
                        <th scope="col" class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody>
        <% for (show of shows) { %>
                <tr>
                    <td class="p-0 list-show-poster-container"><img src="<%= show.image %>" alt="<%= show.name %> Poster" class="list-show-poster"></td>
                    <td class="show-name"><%= show.name %></td>
                    <td><%= show.premiereDate %></td>
                    <td><%= show.rating %></td>
                    <td class="popup-button-container">
                        <div class="d-flex justify-content-center">
                        <button class="border-0 bg-transparent popup-button" id="<%= show._id %>">
                            <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-x popup-button-svg" viewBox="0 0 16 16">
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                            </svg>
                        </button>
                    </div>
                    </td>
                </tr>
        <% } %>
                </tbody>
            </table>
        <% } %>

    </section>
</main>

<%- include('partials/dimmer.ejs') %>

<script src="/js/navFunctions.js"></script>
<script src="/js/dimmer.js"></script>
<script src="/js/confirmation.js"></script>
</body>
</html>